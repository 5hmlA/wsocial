<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/topic_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPublish"
        android:src="@mipmap/ic_launcher"/>

    <jiang.wsocial.emoji.weiget.EmojiTextView
        android:id="@+id/etextv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#f0ff"
        android:clickable="true"
        android:onClick="tooglefull"
        android:minHeight="100dp"/>

    <jiang.wsocial.emoji.SmileyInputRoot android:id="@+id/root"
                                         xmlns:android="http://schemas.android.com/apk/res/android"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <include layout="@layout/my_input_bar"/>

    </jiang.wsocial.emoji.SmileyInputRoot>
</FrameLayout>
